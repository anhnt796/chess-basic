<interface>
	<object id="window" class="GtkWindow">
		<property name="name">window</property>
		<property name="visible">True</property>
		<property name="title">Chess</property>
		<property name="default_width">440</property>
    	<property name="default_height">248</property>
		<property name="border-width">10</property>
		<child>
			<object id="gird" class="GtkGrid">
				<property name="visible">True</property>
				<property name="name">menu</property>
				<child>
					<object id="btn_play" class="GtkButton">
						<property name="visible">True</property>
						<property name="label">Play</property>
					</object>
					<packing>
						<property name="left-attach">0</property>
						<property name="top-attach">0</property>
					</packing>
				</child>
				<child>
					<object id="btn_create_sv" class="GtkButton">
						<property name="visible">True</property>
						<property name="label">Create Server</property>
					</object>
					<packing>
						<property name="left-attach">0</property>
						<property name="top-attach">2</property>
					</packing>
				</child>
				
				<child>
					<object id="btn_connect_sv" class="GtkButton">
						<property name="visible">True</property>
						<property name="label">Connect Server</property>
					</object>
					<packing>
						<property name="left-attach">0</property>
						<property name="top-attach">4</property>
					</packing>
				</child>
				<child>
					<object id="btn_quit" class="GtkButton">
						<property name="visible">True</property>
						<property name="label">Quit</property>
					</object>
					<packing>
						<property name="left-attach">0</property>
						<property name="top-attach">6</property>
					</packing>
				</child>
			</object>
			<packing>
			</packing>
		</child>
	</object>
</interface>

				

